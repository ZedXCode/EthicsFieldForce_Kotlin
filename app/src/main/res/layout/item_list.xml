<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/llMain"
        style="@style/LinearLayoutVertical"
        android:layout_margin="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/LinearLayoutHorizontal">

                <TextView
                    android:textSize="@dimen/_11ssp"
                    android:id="@+id/tvAccountName"
                    style="@style/ListItemHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

                <TextView
                    android:textSize="@dimen/_11ssp"
                    android:id="@+id/tvCategory"
                    style="@style/CommonTextViewBoldStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

            </LinearLayout>

            <TextView
                android:textSize="@dimen/_11ssp"
                android:id="@+id/tvPlace"
                style="@style/ListItemValue"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black" />

            <LinearLayout
                android:baselineAligned="false"
                style="@style/LinearLayoutHorizontal"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    style="@style/LinearLayoutHorizontal"
                    android:layout_width="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_mobile" />

                    <TextView
                        android:textSize="@dimen/_11ssp"
                        android:id="@+id/tvMobile"
                        style="@style/ListItemValue"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start|center"
                        android:gravity="start|center"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LinearLayoutHorizontal"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_width="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_email" />

                    <TextView
                        android:textSize="@dimen/_11ssp"
                        android:id="@+id/tvEmail"
                        style="@style/ListItemValue"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="start|center"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/llBottomVisit"
            style="@style/LinearLayoutHorizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:textSize="@dimen/_11ssp"
                android:id="@+id/tvAddVisit"
                style="@style/ListItemValue"
                android:layout_width="0dp"
                android:layout_gravity="start|center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="start|center"
                android:singleLine="true"
                android:text="@string/add_visit"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/imgLocation"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_location_pin"
                app:tint="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/llAccount"
                style="@style/LinearLayoutHorizontal"
                android:layout_width="0dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_right_arrow"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:textSize="@dimen/_11ssp"
                    style="@style/ListItemValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="@string/account"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPartyBottom"
            style="@style/LinearLayoutHorizontal"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:textSize="@dimen/_11ssp"
                android:id="@+id/tvAddVisitInParty"
                style="@style/ListItemValue"
                android:layout_width="0dp"
                android:layout_gravity="start|center"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="start|center"
                android:singleLine="true"
                android:text="@string/add_visit"
                android:textColor="@color/colorPrimary" />

            <ImageView
                android:id="@+id/imgPartyLocation"
                android:layout_width="0dp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_location_pin"
                app:tint="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/llPartyAccount"
                style="@style/LinearLayoutHorizontal"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_right_arrow"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:textSize="@dimen/_11ssp"
                    style="@style/ListItemValue"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="@string/account"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>