<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="@dimen/_8sdp"
    app:strokeWidth="@dimen/_1sdp"
    app:strokeColor="@color/cardStrokeColor"
    app:cardBackgroundColor="@color/cardBackground">

    <LinearLayout
        android:id="@+id/llMain"
        android:paddingStart="@dimen/_4sdp"
        android:paddingTop="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Section -->
        <LinearLayout
            android:id="@+id/llTop"
            android:padding="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_4sdp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:gravity="start|center"
                style="@style/UserNameInListing"/>

            <CheckBox
                android:id="@+id/cbApprove"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_4sdp">

            <LinearLayout
                style="@style/LinearLayoutVertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabel1"
                    android:text="@string/date"
                    style="@style/ListItemHeader"/>

                <TextView
                    android:id="@+id/tvValue1"
                    android:textColor="@color/colorPrimary"
                    style="@style/ListItemValue"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayoutVertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabel3"
                    android:text="@string/type"
                    style="@style/ListItemHeader"/>

                <TextView
                    android:id="@+id/tvValue3"
                    android:textColor="@color/colorPrimary"
                    style="@style/ListItemValue"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"

            android:paddingBottom="@dimen/_4sdp">

            <LinearLayout
                style="@style/LinearLayoutVertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabel5"
                    android:text="@string/limit"
                    style="@style/ListItemHeader"/>

                <TextView
                    android:id="@+id/tvValue5"
                    android:textColor="@color/colorPrimary"
                    style="@style/ListItemValue"/>
            </LinearLayout>

            <LinearLayout
                style="@style/LinearLayoutVertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabel6"
                    android:text="@string/expense"
                    style="@style/ListItemHeader"/>

                <TextView
                    android:id="@+id/tvValue6"
                    android:textColor="@color/colorPrimary"
                    style="@style/ListItemValue"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Last Row -->
        <LinearLayout
            android:paddingTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/LinearLayoutVertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLabel2"
                    android:text="@string/place"
                    style="@style/ListItemHeader"/>

                <TextView
                    android:id="@+id/tvValue2"
                    android:textColor="@color/colorPrimary"
                    style="@style/ListItemValue"/>
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvValue4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_header_label"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Approved"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_14ssp"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
