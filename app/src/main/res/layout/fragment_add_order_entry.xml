<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorscreenbackground">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_header" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <LinearLayout
                        android:id="@+id/llHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal"
                        android:padding="@dimen/_8sdp">

                        <TextView
                            android:id="@+id/tvHeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="@string/optional_fields"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivToggle"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:src="@drawable/ic_add_circle" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/llOptionalFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:visibility="visible">

                        <TextView
                            style="@style/TextViewLabelNormal"
                            android:text="@string/company" />

                        <LinearLayout
                            android:id="@+id/llSelectCompany"
                            style="@style/LinearLayoutHorizontal"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edittext_background"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvSelectCompany"
                                style="@style/TextViewLabelNormal"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="@string/select_company"
                                android:maxLines="1"
                                android:paddingStart="@dimen/_3sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black" />

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_drop_down" />

                        </LinearLayout>

                        <TextView
                            style="@style/TextViewLabelNormal"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:text="@string/branch" />

                        <LinearLayout
                            android:id="@+id/llSelectBranch"
                            style="@style/LinearLayoutHorizontal"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edittext_background"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvSelectBranch"
                                style="@style/TextViewLabelNormal"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="@string/select_branch"
                                android:maxLines="1"
                                android:paddingStart="@dimen/_3sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black" />

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_drop_down" />

                        </LinearLayout>

                        <TextView
                            style="@style/TextViewLabelNormal"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:text="@string/division" />

                        <LinearLayout
                            android:id="@+id/llSelectDivision"
                            style="@style/LinearLayoutHorizontal"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:background="@drawable/edittext_background"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvSelectDivision"
                                style="@style/TextViewLabelNormal"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="@string/select_division"
                                android:maxLines="1"
                                android:paddingStart="@dimen/_3sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black" />

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_drop_down" />

                        </LinearLayout>

                        <TextView
                            style="@style/TextViewLabelNormal"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:text="@string/category" />

                        <TextView
                            android:id="@+id/tvCategory"
                            style="@style/BoxTextView"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:visibility="gone" />

                        <FrameLayout
                            android:id="@+id/flCategory"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_4sdp">

                            <Spinner
                                android:id="@+id/spCategory"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edittext_background"
                                android:gravity="start"
                                android:singleLine="true"
                                android:textColor="@color/black" />

                            <ImageView
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="end|center"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_drop_down" />
                        </FrameLayout>

                        <TextView
                            style="@style/TextViewLabelNormal"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:text="@string/date" />

                        <TextView
                            android:id="@+id/tvDate"
                            style="@style/CommonEditTextViewStyle"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:drawableEnd="@drawable/ic_calendar"
                            android:drawablePadding="@dimen/_5sdp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    style="@style/TextViewLabelNormal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="gone"
                    android:text="Order Mode" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/edittext_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOrderMode"
                        style="@style/TextViewLabelNormal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:paddingStart="@dimen/_4sdp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/spOrderMode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="start"
                        android:singleLine="true"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/ic_drop_down" />
                </LinearLayout>

                <TextView
                    style="@style/TextViewLabelNormal"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/party_name" />

                <LinearLayout
                    style="@style/LinearLayoutHorizontal"
                    android:layout_marginTop="@dimen/_4sdp">

                    <FrameLayout
                        android:id="@+id/flPartyDealer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvPartyDealer"
                            style="@style/TextViewLabelNormal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/edittext_background"
                            android:gravity="start|center"
                            android:hint="@string/select_party"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_25sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="end|center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:src="@drawable/ic_drop_down" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/imgCancelPartyDealer"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_close_black"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    style="@style/TextViewLabelNormal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/contact_person_name" />

                <TextView
                    android:id="@+id/tvContactPerson"
                    style="@style/CommonEditTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:paddingStart="@dimen/_7sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />


                <EditText
                    android:id="@+id/etContactPersonName"
                    style="@style/CommonEditTextViewStyle"
                    android:inputType="text"
                    android:paddingStart="@dimen/_7sdp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    style="@style/TextViewLabelNormal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/distributor_name" />

                <LinearLayout
                    style="@style/LinearLayoutHorizontal"
                    android:layout_marginTop="@dimen/_4sdp">

                    <FrameLayout
                        android:id="@+id/flSelectDistributor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvSelectDistributor"
                            style="@style/TextViewLabelNormal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/edittext_background"
                            android:gravity="start|center"
                            android:hint="@string/select_distributor"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_25sdp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="end|center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:src="@drawable/ic_drop_down" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/imgCancelDistributor"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_close_black"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    style="@style/TextViewLabelNormal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/mode_of_communication" />

                <RadioGroup
                    android:id="@+id/radioGroupModeOfCom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbPersonally"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personally" />

                    <RadioButton
                        android:id="@+id/rbPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone" />

                    <RadioButton
                        android:id="@+id/rbEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:background="@drawable/bg_rounded_strock"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_half_rounded"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="center"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:text="Product Details"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/white" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- First Section -->
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <!-- SR. -->
                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.1"
                                        android:gravity="center"
                                        android:paddingTop="@dimen/_2sdp"
                                        android:paddingBottom="@dimen/_2sdp"
                                        android:text="SR."
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white" />

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.45"
                                        android:orientation="vertical">

                                        <com.google.android.material.textview.MaterialTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:paddingTop="@dimen/_1sdp"
                                            android:paddingBottom="@dimen/_1sdp"
                                            android:text="Qty"
                                            android:textColor="@color/white"
                                            android:textSize="13sp" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_1sdp"
                                            android:background="@color/white" />

                                        <com.google.android.material.textview.MaterialTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:paddingTop="@dimen/_1sdp"
                                            android:paddingBottom="@dimen/_1sdp"
                                            android:text="Unit"
                                            android:textColor="@color/white"
                                            android:textSize="13sp" />

                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white" />

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.45"
                                        android:orientation="vertical">

                                        <com.google.android.material.textview.MaterialTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:paddingTop="@dimen/_1sdp"
                                            android:paddingBottom="@dimen/_1sdp"
                                            android:text="Price"
                                            android:textColor="@color/white"
                                            android:textSize="13sp" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_1sdp"
                                            android:background="@color/white" />

                                        <com.google.android.material.textview.MaterialTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:paddingTop="@dimen/_1sdp"
                                            android:paddingBottom="@dimen/_1sdp"
                                            android:text="Amount"
                                            android:textColor="@color/white"
                                            android:textSize="13sp" />
                                    </androidx.appcompat.widget.LinearLayoutCompat>


                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <!-- Separator -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white" />

                            <!-- Action Section -->
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:gravity="center"
                                android:paddingStart="@dimen/_7sdp"
                                android:paddingEnd="@dimen/_7sdp"
                                android:text="Action"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/colorPrimary" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvProduct"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_280sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvNoItemFound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:layout_marginBottom="@dimen/_14sdp"
                        android:gravity="center"
                        android:text="No Data Found"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="normal"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/lylTotalOrderAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_1sdp"
                            android:paddingTop="@dimen/_1sdp"
                            android:text="Total Order Qty : "
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/colorRed"
                            app:cardCornerRadius="@dimen/_6sdp">

                            <TextView
                                android:id="@+id/tvTotalOrderQty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_3sdp"
                                android:textColor="@color/white" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_1sdp"
                            android:paddingTop="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:text="Total Order Amount : "
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_3sdp"
                            app:cardBackgroundColor="@color/colorRed"
                            app:cardCornerRadius="@dimen/_6sdp">

                            <TextView
                                android:id="@+id/tvTotalOrderAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_3sdp"
                                android:textColor="@color/white" />
                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddOrderDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_22sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_7sdp"
                        android:background="@drawable/bg_button_primary"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="@string/add_product"
                        android:textColor="@color/white"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <TextView
                    style="@style/TextViewLabelNormal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Remarks" />

                <EditText
                    android:id="@+id/etRemarks"
                    style="@style/CommonMultiLineEditTextStyle"
                    android:inputType="text"
                    android:paddingStart="@dimen/_7sdp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvRemarks"
                    style="@style/CommonMultiLineEditTextStyle"
                    android:inputType="text"
                    android:paddingStart="@dimen/_7sdp"
                    android:textColor="@color/black"
                    android:visibility="gone" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_12sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_6sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_strock"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvImages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_8sdp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/txtNoFilePathImages"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingTop="@dimen/_4sdp"
                            android:text="@string/no_image_found"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardImageCapture"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_48sdp"
                            android:layout_margin="@dimen/_8sdp"
                            app:cardBackgroundColor="?colorPrimary"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_4sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="@dimen/_24sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:src="@drawable/ic_camera"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/txtCapture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/upload"
                                    android:textAllCaps="true"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_16ssp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/llBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tvSubmit"
                        style="@style/CommonButtonStyle"
                        android:layout_width="match_parent"
                        android:text="@string/submit" />

                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>