<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_6sdp">

    <FrameLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center">

        <!-- Rounded Image View -->
        <ethicstechno.com.fieldforce.utils.RoundedImageView.RoundedImageView
            android:id="@+id/ivAssetImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_image"
            app:riv_border_color="?colorPrimary"
            app:riv_border_width="2dp"
            app:riv_corner_radius_top_left="@dimen/_10sdp"
            app:riv_corner_radius_top_right="@dimen/_10sdp"
            app:riv_corner_radius_bottom_left="@dimen/_10sdp"
            app:riv_corner_radius_bottom_right="@dimen/_10sdp" />

        <!-- Shadow View -->
        <View
            android:id="@+id/viewShadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_background"
            android:visibility="gone" />

        <!-- Cancel Icon -->
        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="end|top"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:src="@drawable/ic_close"
            android:background="@drawable/ic_close_drawable"
            android:visibility="visible" />
    </FrameLayout>

</androidx.cardview.widget.CardView>
