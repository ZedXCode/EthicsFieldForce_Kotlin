<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_240sdp">

    <!-- LinearLayout for Top and Bottom Views -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Section (Blue Background with Image) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:background="#0077FF">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/nav_header_background"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <!-- Bottom Section (Red Background with User Info) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:orientation="vertical"
            android:background="@color/drawerBackground">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_70sdp"
                android:gravity="center"
                android:fontFamily="popi"
                style="@style/CommonTextViewExtraBoldStyle16" />

            <TextView
                android:id="@+id/tvLastLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                style="@style/CommonTextViewNormalStyle14" />
        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/drawerColor" />
    </LinearLayout>

    <!-- Profile Image (Centered) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:src="@drawable/ic_profile"
        android:scaleType="centerCrop" />
</FrameLayout>
