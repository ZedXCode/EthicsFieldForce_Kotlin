<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/llMain"
            android:padding="@dimen/_5sdp"
            style="@style/LinearLayoutVertical">

            <LinearLayout style="@style/LinearLayoutVertical">

                <LinearLayout
                    android:baselineAligned="false"
                    style="@style/LinearLayoutHorizontal">

                    <LinearLayout
                        style="@style/LinearLayoutHorizontal"
                        android:layout_weight="1">

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            style="@style/ListItemHeader"
                            android:layout_weight="1"
                            android:text="@string/trip_date" />

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:id="@+id/tvTripDate"
                            style="@style/ListItemValue"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutHorizontal"
                        android:layout_weight="1">

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            style="@style/ListItemHeader"
                            android:layout_weight="1"
                            android:text="@string/vehicle"/>

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:id="@+id/tvVehicle"
                            android:textColor="@color/black"
                            style="@style/ListItemValue"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:baselineAligned="false"
                    style="@style/LinearLayoutHorizontal">

                    <LinearLayout
                        style="@style/LinearLayoutHorizontal"
                        android:layout_weight="1">

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            style="@style/ListItemHeader"
                            android:layout_weight="1"
                            android:text="@string/start_time" />

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:id="@+id/tvStartTime"
                            style="@style/ListItemValue"
                            android:layout_weight="1"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutHorizontal"
                        android:layout_weight="1">

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            style="@style/ListItemHeader"
                            android:layout_weight="1"
                            android:text="@string/end_time" />

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:id="@+id/tvEndTime"
                            style="@style/ListItemValue"
                            android:layout_weight="1"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:baselineAligned="false"
                    style="@style/LinearLayoutHorizontal">

                    <LinearLayout
                        style="@style/LinearLayoutHorizontal"
                        android:layout_weight="1">

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            style="@style/ListItemHeader"
                            android:layout_weight="1"
                            android:text="@string/place"/>

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:id="@+id/tvPlace"
                            style="@style/ListItemValue"
                            android:layout_weight="1"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutHorizontal"
                        android:layout_weight="1">

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            style="@style/ListItemHeader"
                            android:layout_weight="1"
                            android:text="@string/visit_count" />

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:id="@+id/tvVisitCount"
                            style="@style/ListItemValue"
                            android:layout_weight="1"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:baselineAligned="false"
                    style="@style/LinearLayoutHorizontal">

                    <LinearLayout
                        style="@style/LinearLayoutHorizontal"
                        android:layout_weight="1">

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            style="@style/ListItemHeader"
                            android:layout_weight="1"
                            android:text="@string/reading_km" />

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:id="@+id/tvReadingKm"
                            style="@style/ListItemValue"
                            android:layout_weight="1"
                            android:text="" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutHorizontal"
                        android:layout_weight="1">

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            style="@style/ListItemHeader"
                            android:layout_weight="1"
                            android:text="@string/map_km" />

                        <TextView
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:id="@+id/tvMapKm"
                            style="@style/ListItemValue"
                            android:layout_weight="1"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>